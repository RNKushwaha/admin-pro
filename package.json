{
  "private": true,
  "scripts": {
    "dev": "next dev -p 3004",
    "build": "next build",
    "build:staging": "env-cmd -f .env.staging next build",
    "postbuild1": "purgecss --css build/static/css/*.css --content build/index.html build/static/js/*.js --output build/static/css",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ],
    "*.{ts,tsx,js}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "chart.js": "^3.7.0",
    "next": "12.0.7",
    "next-i18next": "^10.1.0",
    "next-images": "^1.8.4",
    "react": "17.0.2",
    "react-chartjs-2": "^4.0.0",
    "react-dom": "17.0.2",
    "react-google-recaptcha": "^2.1.0",
    "react-hook-form": "^7.24.0",
    "sass": "^1.47.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@next/eslint-plugin-next": "^12.0.7",
    "@popperjs/core": "^2.11.2",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.0",
    "@types/node": "17.0.8",
    "@types/react": "^17.0.38",
    "@types/react-google-recaptcha": "^2.1.2",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "babel-jest": "^27.4.6",
    "env-cmd": "^10.1.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.7",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.1.7",
    "postcss": "^8.4.5",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^7.2.0",
    "prettier": "^2.5.1",
    "purgecss": "^4.1.3",
    "typescript": "4.5.4",
    "webpack-bundle-analyzer": "^4.4.2"
  }
}
